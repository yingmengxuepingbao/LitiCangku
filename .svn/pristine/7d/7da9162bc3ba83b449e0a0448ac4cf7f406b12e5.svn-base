<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.penghaisoft.framework.reportmanagement.model.dao.IReportManagementDao" >

	<select id="getReportList" parameterType="java.lang.Integer" resultType="com.penghaisoft.framework.reportmanagement.model.entity.Report">
		SELECT
			id,
			title,
			description,
			url,
			path
		FROM report r
		ORDER BY
			r.id DESC
		LIMIT
			#{startNumber},#{numberOnePage}
  	</select>
	<select id="getReportTotalCount" resultType="java.lang.Integer">
		SELECT
			count(0)
		FROM
			report r
  	</select>
	<select id="getAllReportList" resultType="com.penghaisoft.framework.reportmanagement.model.entity.Report">
		SELECT
			id,
			title,
			description,
			url,
			path
		FROM report r
		ORDER BY
			r.id DESC
	</select>
	<insert id="insert" parameterType="com.penghaisoft.framework.reportmanagement.model.entity.Report">
  		insert into report (title, description, url,path)
  		values (#{title,jdbcType=VARCHAR}, #{description,jdbcType=VARCHAR}, #{url,jdbcType=VARCHAR},#{path,jdbcType=VARCHAR})
  	</insert>

</mapper>